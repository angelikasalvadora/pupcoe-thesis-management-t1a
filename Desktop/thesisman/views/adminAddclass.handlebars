      <div class="container">
        <!-- row -->
        <div class="row">

          <div class="col-md-7">
            <!-- Billing Details -->
            <div class="billing-details">
              <div class="section-title">
                <h3 class="title">Add Class</h3>
              </div>
              <br>

              <div class="form-group" >
                <form method="POST" action="/add_class">
      <div class="row">
        <div class="form-group col-md-8">
          <label>Batch</label>
          <select name="batch" class="form-control">
          {{#each batches}}
            <option value="{{this.id}}">{{this.batches}}</option>
          {{/each}}
          </select>
        </div>
        <div class="form-group col-md-8">
          <label>Year Level</label>
          <select name="year_level" class="form-control">
          {{#each year_levels}}
            <option value="{{this.id}}">{{this.year_levels}}</option>
          {{/each}}
          </select>
        </div>
        <div class="form-group col-md-8">
          <label>Section</label>
          <select name="section" class="form-control">
          {{#each sections}}
            <option value="{{this.id}}">{{this.sections}}</option>
          {{/each}}
          </select>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="form-group col-md-8">
          <label><h4>Adviser</h4></label>
          <select name="user_id" class="form-control">
          {{#each faculties}}
            <option value="{{this.id}}">{{this.fname}} {{this.lname}}</option>
          {{/each}}
          </select>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-8">
          <input class="btn btn-md" type="submit" name="save" value="Save">
        </div>
      </div>
    </form>


